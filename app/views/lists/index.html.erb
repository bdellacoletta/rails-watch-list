<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1585647347384-2593bc35786b);">
  <div class="container">
    <h1 class="d-flex justify-content-center">My movies list!</h1>
    <p class="d-flex justify-content-center">
    <%= link_to "New List", new_list_path, class: "btn btn-flat" %>
    </p>
  </div>
</div>


  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1458053688450-eef5d21d43b3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mzl8fG1vdmllJTIwY2F0ZWdvcnl8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60)">
      <a><%= link_to list.name, list %></a>
      </div>
    <% end %>
  </div>
