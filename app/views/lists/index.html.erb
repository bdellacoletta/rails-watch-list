<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1585647347384-2593bc35786b);">
  <div class="container">
    <h1 class="d-flex justify-content-center">My movies list!</h1>
    <p class="d-flex justify-content-center">
    <%= link_to "New List", new_list_path, class: "btn btn-flat" %>
    </p>
  </div>
</div>


  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 180, crop: :fill %>')">
      <a><%= link_to list.name, list %></a>
      </div>
    <% end %>
  </div>
